<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="25dp"
            android:id="@+id/RMotor_Image"
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:src="@drawable/macito" />

        <TextView
            android:id="@+id/tvRMotor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Rental Motor"
            android:textSize="18sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/descRMotor"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Macito adalah Singkatan dari Malang City Tour Bus merupakan transportasi umum di kota Malang yang dikhususkan untuk pariwisata. Macito ini gratis. Jika kamu hanya punya waktu singkat, tetapi ingin berkeliling kota Malang bisa naik macito. "
            android:textSize="18sp" />
        <Button
            android:id="@+id/cancelButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Back" />
    </LinearLayout>

</LinearLayout>