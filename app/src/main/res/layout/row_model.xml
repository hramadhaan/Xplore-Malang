<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_model"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/foto_bromo"/>

        <LinearLayout
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:id="@+id/l_model"
            android:layout_below="@id/image_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/like_model"
                android:src="@drawable/ic_heart"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comment_model"
                android:src="@drawable/ic_comment"
                android:layout_marginLeft="5dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_model"
                android:src="@drawable/ic_location"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/l_model"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count_like"
                android:text="10 likes"
                android:textStyle="bold" />

            <TextView
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wisata_model"
                android:text="Tempat Wisata"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/count_comment"
                android:text="View All 20 Comment"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/deskripsi_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ini contoh teks yang panjang yang bisa dibaca aja deh hehehe tapi gitu deh gak tau juga"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>