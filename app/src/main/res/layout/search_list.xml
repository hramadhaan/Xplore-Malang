<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_search"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/foto_bromo"/>

        <LinearLayout
            android:layout_below="@id/image_search"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/wisata_search"
                android:text="Tempat Wisata"
                android:textStyle="bold"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/deskripsi_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ini contoh teks yang panjang yang bisa dibaca aja deh hehehe tapi gitu deh gak tau juga"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>