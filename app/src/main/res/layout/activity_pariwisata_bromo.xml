<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-90dp"
            android:src="@drawable/foto_bromo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="150dp"
                android:background="#fff"
                android:fontFamily="@font/gibson_bold"
                android:gravity="center|center"
                android:text="Wisata Alama Bromo"
                android:textColor="#f4f" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/judul_bromo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="220dp"
                android:gravity="center_horizontal"
                android:text="Wisata Alam Bromo"
                android:textColor="#4C5264"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/deskripsi_bromo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/judul_bromo"
                android:layout_marginTop="10sp"
                android:text="@string/deskripsi_bromo"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/lokasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deskripsi_bromo"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="Lokasi" />

            <android.support.v4.app.FragmentTabHost
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </android.support.v4.app.FragmentTabHost>

        </RelativeLayout>

    </RelativeLayout>




</android.support.constraint.ConstraintLayout>