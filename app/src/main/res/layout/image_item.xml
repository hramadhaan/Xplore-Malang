<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/upload_foto"
            android:layout_width="match_parent"
            android:src="@drawable/foto_bromo"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/upload_akun"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/foto_bromo"/>

            <LinearLayout
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/upload_nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hanif Ramadhan"
                    android:textStyle="bold"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/upload_deskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Hanif Ramadhan Abdillahasdasdadadadadasdadadsadasdasd"
                    android:maxLength="41"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    
</android.support.v7.widget.CardView>